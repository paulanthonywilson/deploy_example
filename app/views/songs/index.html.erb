<h1>Listing super songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Artist</th>
    <th>Duration</th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%=h song.name %></td>
    <td><%=h song.artist %></td>
    <td><%=h song.duration %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New song', new_song_path %>